{
  "name": "npf2html",
  "version": "1.0.0",
  "description": "Converts Tumblr's Neue Post Format to plain HTML",
  "exports": {
    "import": "./build/index.mjs",
    "require": "./build/index.js"
  },
  "files": [
    "/build/src/**/*.js",
    "/build/src/**/*.d.ts",
    "/build/src/**/*.mjs"
  ],
  "scripts": {
    "test": "ava",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nex3/npf2html.git"
  },
  "keywords": [
    "npf",
    "tumblr"
  ],
  "author": "Natalie Weizenbaum",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nex3/npf2html/issues"
  },
  "homepage": "https://github.com/nex3/npf2html#readme",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/node": "20.12.7",
    "ava": "^6.1.3",
    "eslint-plugin-prettier": "^5.2.1",
    "gts": "^5.3.1",
    "htmlfy": "^0.3.2",
    "prettier": "^3.3.3",
    "simply-beautiful": "^1.0.1",
    "typescript": "^5.4.3"
  },
  "ava": {
    "files": ["test/**.test.ts"],
    "typescript": {
      "rewritePaths": {
        "test/": "build/test/"
      },
      "compile": false
    }
  }
}
